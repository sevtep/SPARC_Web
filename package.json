{
  "name": "sparc-web",
  "version": "1.0.0",
  "description": "SPARC - K12 Biology & Physics Gamification Learning Platform",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd client && npm run build",
    "build:prod": "node build.js",
    "production": "set NODE_ENV=production && node server/index.js",
    "install-all": "npm install && cd client && npm install"
  },
  "keywords": ["education", "gamification", "k12", "biology", "physics"],
  "author": "SPARC Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
